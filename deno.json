{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": true,
    "removeComments": true,
    "noLib": false,
    "skipLibCheck": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowUnreachableCode": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "strictPropertyInitialization": true,
    "target": "ES2022",
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "noEmitHelpers": true,
    "noUncheckedIndexedAccess": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "isolatedModules": true,
    "strictNullChecks": true
  },
  "tasks": {
    "start": "deno run --allow-net --allow-read --unstable-sloppy-imports src/main.ts",
    "watch": "deno run --allow-net --allow-read --unstable-sloppy-imports --watch=src/ src/main.ts",
    "test": "deno test --allow-net --allow-read"
  },
  "fmt": {
    "options": {
      "useTabs": false,
      "lineWidth": 80,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "include": ["src/**/*.ts"],
      "exclude": ["node_modules/"]
    }
  }
}
