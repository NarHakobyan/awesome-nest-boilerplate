{
    "name": "awesome-nest-boilerplate",
    "version": "0.0.1",
    "description": "Awesome nestjs boilerplate wrote in Typescript",
    "author": "Narek Hakobyan <narek.hakobyan.07@gmail.com>",
    "license": "MIT",
    "scripts": {
        "build": "tsc -p tsconfig.build.json",
        "format": "prettier --write \"src/**/*.ts\"",
        "start:hmr": "node dist/main",
        "start:dev": "ts-node -r tsconfig-paths/register src/main.ts",
        "migration:generate": "ts-node node_modules/typeorm/cli.js migration:generate -f ormconfig -d src/migrations -n",
        "migration:revert": "ts-node node_modules/typeorm/cli.js migration:revert -f ormconfig",
        "watch:dev": "nodemon --config nodemon.json",
        "debug:dev": "nodemon --config nodemon-debug.json",
        "webpack": "webpack --config webpack.config.js --progress",
        "migration:create": "ts-node node_modules/typeorm/cli.js migration:create -f ormconfig -d src/migrations -n",
        "schema:drop": "ts-node node_modules/typeorm/cli.js schema:drop -f ormconfig",
        "start:prod": "node dist/main.js",
        "lint": "tslint -p tsconfig.json -c tslint.json",
        "lint:fix": "tslint --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "docs:dev": "vuepress dev -p 7070",
        "docs:build": "DEPLOY_ENV=gh-pages vuepress build",
        "docs:deploy": "yarn docs:build && gh-pages -d .vuepress/dist"
    },
    "dependencies": {
        "@nestjs/common": "~6.3.1",
        "@nestjs/core": "~6.3.1",
        "@nestjs/jwt": "~6.1.1",
        "@nestjs/microservices": "~6.3.1",
        "@nestjs/passport": "~6.1.0",
        "@nestjs/platform-express": "~6.3.1",
        "@nestjs/swagger": "~3.0.2",
        "@nestjs/typeorm": "~6.1.2",
        "aws-sdk": "~2.472.0",
        "bcrypt": "~3.0.6",
        "class-transformer": "~0.2.3",
        "class-validator": "~0.9.1",
        "compression": "~1.7.4",
        "dotenv": "~8.0.0",
        "express": "~4.17.1",
        "express-rate-limit": "~5.0.0",
        "file-type": "~11.1.0",
        "helmet": "~3.18.0",
        "jsonwebtoken": "~8.5.1",
        "lodash": "~4.17.11",
        "mime-types": "~2.1.24",
        "mongodb": "~3.2.7",
        "morgan": "~1.9.1",
        "passport": "~0.4.0",
        "passport-jwt": "^4.0.0",
        "pg": "^7.8.0",
        "reflect-metadata": "~0.1.13",
        "request-context": "~2.0.0",
        "rxjs": "^6.5.2",
        "swagger-ui-express": "^4.0.6",
        "typeorm": "^0.2.18",
        "typeorm-transactional-cls-hooked": "^0.1.8",
        "typescript": "^3.5.1",
        "uuid": "^3.3.2"
    },
    "devDependencies": {
        "@nestjs/testing": "^6.3.1",
        "@types/bcrypt": "^3.0.0",
        "@types/compression": "^0.0.36",
        "@types/dotenv": "^6.1.1",
        "@types/express": "^4.17.0",
        "@types/express-rate-limit": "^3.3.0",
        "@types/file-type": "^10.9.1",
        "@types/helmet": "^0.0.43",
        "@types/jest": "^24.0.13",
        "@types/jsonwebtoken": "^8.3.2",
        "@types/lodash": "^4.14.134",
        "@types/mime-types": "^2.1.0",
        "@types/morgan": "^1.7.35",
        "@types/node": "^12.0.7",
        "@types/passport-jwt": "^3.0.1",
        "@types/supertest": "^2.0.7",
        "@types/uuid": "^3.4.4",
        "clean-webpack-plugin": "^3.0.0",
        "gh-pages": "^2.0.1",
        "husky": "^1.3.1",
        "jest": "^24.8.0",
        "lint-staged": "~8.2.0",
        "nodemon": "^1.19.1",
        "prettier": "^1.18.2",
        "supertest": "^4.0.2",
        "ts-jest": "^23.1.3",
        "ts-loader": "^4.4.2",
        "ts-node": "^7.0.1",
        "tsconfig-paths": "^3.5.0",
        "tslint": "^5.17.0",
        "tslint-config-prettier": "~1.18.0",
        "tslint-consistent-codestyle": "^1.15.1",
        "tslint-eslint-rules": "^5.4.0",
        "tslint-plugin-prettier": "^2.0.1",
        "vuepress": "^1.0.1",
        "webpack": "^4.34.0",
        "webpack-cli": "^3.3.4",
        "webpack-node-externals": "^1.7.2"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.@(ts)": [
            "tslint --fix -p .",
            "git add"
        ]
    }
}
