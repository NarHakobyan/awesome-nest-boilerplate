{
    "name": "pop-migrate",
    "version": "0.0.1",
    "description": "description",
    "author": "Narek Hakobyan <narek.hakobyan.07@gmail.com>",
    "license": "MIT",
    "scripts": {
        "build": "tsc -p tsconfig.build.json",
        "format": "prettier --write \"src/**/*.ts\"",
        "start": "ts-node -r tsconfig-paths/register src/main.ts",
        "migration:generate": "ts-node node_modules/typeorm/cli.js migration:generate -f ormconfig -d src/migrations -n",
        "start:dev": "nodemon --config nodemon.json",
        "debug:dev": "nodemon --config nodemon-debug.json",
        "typeorm:migration:create": "ts-node node_modules/typeorm/cli.js migration:create -f ormconfig -d src/migrations -n",
        "typeorm:schema:drop": "ts-node node_modules/typeorm/cli.js schema:drop -f ormconfig",
        "prestart:prod": "rimraf dist && npm run build",
        "start:prod": "node dist/main.js",
        "lint": "tslint -p tsconfig.json -c tslint.json",
        "lint:fix": "tslint --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json"
    },
    "dependencies": {
        "@nestjs/common": "^5.4.0",
        "@nestjs/core": "^5.4.0",
        "@nestjs/jwt": "^0.3.0",
        "@nestjs/microservices": "^5.4.0",
        "@nestjs/passport": "^5.1.0",
        "@nestjs/swagger": "^2.5.1",
        "@nestjs/typeorm": "^5.3.0",
        "aws-sdk": "^2.405.0",
        "axios": "^0.18.0",
        "bcrypt": "^3.0.4",
        "class-transformer": "^0.2.0",
        "class-validator": "^0.9.1",
        "compression": "^1.7.3",
        "dotenv": "^6.2.0",
        "express-rate-limit": "~3.3.0",
        "file-type": "^10.8.0",
        "helmet": "^3.16.0",
        "jsonwebtoken": "^8.4.0",
        "lodash": "^4.17.11",
        "mongodb": "^3.1.13",
        "morgan": "^1.9.1",
        "nest-schedule": "^0.4.5",
        "passport": "^0.4.0",
        "passport-jwt": "^4.0.0",
        "pg": "^7.8.0",
        "reflect-metadata": "^0.1.12",
        "request-context": "^2.0.0",
        "rimraf": "^2.6.2",
        "rxjs": "^6.2.2",
        "typeorm": "^0.2.13",
        "typescript": "^3.0.1",
        "uuid": "^3.3.2"
    },
    "devDependencies": {
        "@nestjs/testing": "^5.1.0",
        "@types/bcrypt": "^3.0.0",
        "@types/compression": "^0.0.36",
        "@types/dotenv": "^6.1.0",
        "@types/express": "^4.16.0",
        "@types/express-rate-limit": "~3.3.0",
        "@types/file-type": "^10.6.0",
        "@types/helmet": "^0.0.43",
        "@types/jest": "^23.3.1",
        "@types/jsonwebtoken": "^8.3.0",
        "@types/morgan": "^1.7.35",
        "@types/node": "^10.7.1",
        "@types/passport-jwt": "^3.0.1",
        "@types/supertest": "^2.0.5",
        "@types/uuid": "^3.4.4",
        "husky": "^1.3.1",
        "jest": "^23.5.0",
        "lint-staged": "^8.1.4",
        "nodemon": "^1.18.3",
        "prettier": "^1.16.4",
        "supertest": "^3.1.0",
        "ts-jest": "^23.1.3",
        "ts-loader": "^4.4.2",
        "ts-node": "^7.0.1",
        "tsconfig-paths": "^3.5.0",
        "tslint": "5.11.0",
        "tslint-config-prettier": "^1.18.0",
        "tslint-consistent-codestyle": "^1.15.0",
        "tslint-eslint-rules": "^5.4.0",
        "tslint-plugin-prettier": "^2.0.1"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.@(ts)": [
            "tslint --fix -p .",
            "git add"
        ]
    }
}
