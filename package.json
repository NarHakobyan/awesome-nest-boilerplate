{
    "name": "awesome-nest-boilerplate",
    "version": "0.0.1",
    "description": "Awesome NestJS Boilerplate, Typescript, Postgres, TypeORM",
    "author": "Narek Hakobyan <narek.hakobyan.07@gmail.com>",
    "license": "MIT",
    "scripts": {
        "build": "tsc -p tsconfig.build.json",
        "format": "prettier --write \"src/**/*.ts\"",
        "start:hmr": "node dist/main",
        "start:dev": "ts-node -r tsconfig-paths/register src/main.ts",
        "migration:generate": "ts-node node_modules/typeorm/cli.js migration:generate -f ormconfig -d src/migrations -n",
        "migration:revert": "ts-node node_modules/typeorm/cli.js migration:revert -f ormconfig",
        "watch:dev": "nodemon --config nodemon.json",
        "debug:dev": "nodemon --config nodemon-debug.json",
        "webpack": "webpack --config webpack.config.js --progress",
        "migration:create": "ts-node node_modules/typeorm/cli.js migration:create -f ormconfig -d src/migrations -n",
        "schema:drop": "ts-node node_modules/typeorm/cli.js schema:drop -f ormconfig",
        "start:prod": "node dist/main.js",
        "lint": "eslint . --ext .ts",
        "lint:fix": "eslint --fix . --ext .ts",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "docs:dev": "vuepress dev -p 7070",
        "docs:build": "DEPLOY_ENV=gh-pages vuepress build",
        "docs:deploy": "yarn docs:build && gh-pages -d .vuepress/dist"
    },
    "dependencies": {
        "@nestjs/common": "^7.0.8",
        "@nestjs/core": "^7.0.8",
        "@nestjs/jwt": "^7.0.0",
        "@nestjs/microservices": "^7.0.8",
        "@nestjs/passport": "^7.0.0",
        "@nestjs/platform-express": "^7.0.8",
        "@nestjs/swagger": "^4.5.2",
        "@nestjs/typeorm": "^7.0.0",
        "aws-sdk": "~2.549.0",
        "bcrypt": "~3.0.6",
        "class-transformer": "^0.2.3",
        "class-validator": "^0.10.2",
        "compression": "~1.7.4",
        "cross-env": "^7.0.2",
        "dotenv": "~8.1.0",
        "express": "~4.17.1",
        "express-rate-limit": "~5.0.0",
        "file-type": "~12.3.0",
        "helmet": "~3.21.1",
        "jsonwebtoken": "~8.5.1",
        "lodash": "^4.17.15",
        "mime-types": "~2.1.24",
        "morgan": "~1.9.1",
        "passport": "~0.4.0",
        "passport-jwt": "^4.0.0",
        "pg": "^7.12.1",
        "reflect-metadata": "~0.1.13",
        "request-context": "~2.0.0",
        "rxjs": "^6.5.3",
        "source-map-support": "^0.5.13",
        "swagger-ui-express": "^4.1.2",
        "typeorm": "^0.2.19",
        "typeorm-transactional-cls-hooked": "^0.1.8",
        "typescript": "^3.6.4",
        "uuid": "^3.3.3"
    },
    "devDependencies": {
        "@nestjs/testing": "^7.0.8",
        "@types/bcrypt": "^3.0.0",
        "@types/compression": "^1.7.0",
        "@types/dotenv": "^6.1.1",
        "@types/express": "^4.17.1",
        "@types/express-rate-limit": "^3.3.3",
        "@types/file-type": "^10.9.1",
        "@types/helmet": "^0.0.44",
        "@types/jest": "^24.0.19",
        "@types/jsonwebtoken": "^8.3.4",
        "@types/lodash": "^4.14.144",
        "@types/mime-types": "^2.1.0",
        "@types/morgan": "^1.7.37",
        "@types/node": "^12.7.12",
        "@types/passport-jwt": "^3.0.2",
        "@types/supertest": "^2.0.8",
        "@types/uuid": "^3.4.5",
        "@typescript-eslint/eslint-plugin": "^2.5.0",
        "@typescript-eslint/eslint-plugin-tslint": "^2.5.0",
        "@typescript-eslint/parser": "^2.5.0",
        "clean-webpack-plugin": "^3.0.0",
        "eslint": "^6.5.1",
        "eslint-config-prettier": "^6.4.0",
        "eslint-plugin-import": "^2.18.2",
        "eslint-plugin-import-helpers": "^1.0.2",
        "eslint-plugin-prettier": "^3.1.1",
        "eslint-plugin-simple-import-sort": "^5.0.0",
        "gh-pages": "^2.1.1",
        "husky": "^3.0.9",
        "jest": "^24.9.0",
        "lint-staged": "~9.4.2",
        "nodemon": "^1.19.3",
        "prettier": "^1.18.2",
        "supertest": "^4.0.2",
        "ts-jest": "^24.1.0",
        "ts-loader": "^6.2.0",
        "ts-node": "^8.4.1",
        "tsconfig-paths": "^3.9.0",
        "tslint": "^5.20.0",
        "tslint-config-prettier": "~1.18.0",
        "tslint-consistent-codestyle": "^1.16.0",
        "tslint-eslint-rules": "^5.4.0",
        "tslint-plugin-prettier": "^2.0.1",
        "vuepress": "^1.2.0",
        "webpack": "^4.41.1",
        "webpack-cli": "^3.3.9",
        "webpack-node-externals": "^1.7.2"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.ts": [
            "eslint --fix",
            "git add"
        ]
    }
}
